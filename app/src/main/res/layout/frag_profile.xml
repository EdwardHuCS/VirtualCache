<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/vc_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/logo"
        android:text="ckadam@usc.edu"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_marginTop="290dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/faintWhite"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <TextView
        android:id="@+id/aboutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about"
        android:layout_marginTop="10dp"
        android:text="vsksjcbvbxcdfbcsdvz zxvkzj vbkdz k  z  lfj vkfvj\ndCBvbksBkxvkjxbvckb cv zfsvjjv svfvcv vz xcvxz \nsvzfvzdvdzvdfv fv vdzfvdzv SV fvdzx \nsgvdfvcdc sF dvdzvdfzvvfv vzdvvzdfv"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="16sp"
        android:textColor="@color/faintWhite"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@id/aboutDescription"
        android:text="Sign Out"
        android:id="@+id/signOut"
        android:layout_marginTop="100dp"
        android:textColor="@color/faintWhite"
        android:layout_alignEnd="@id/aboutDescription"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"/>



</RelativeLayout>